                        <Hyperlink NavigateUri="http://mahapps.com/" Name="hyperlink" 
                                   ToolTip="{Binding ElementName=hyperlink, Path=NavigateUri}"
                                   RequestNavigate="hyperlink_RequestNavigate">
                            MahApps.Metro
                        </Hyperlink>
                    </TextBlock>
                </Grid>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
